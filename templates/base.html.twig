<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block titulo %}{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <link rel="stylesheet" href="{{ asset('css/mdb.min.css') }}"/>
    <!-- Font Awesome -->
    <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
            rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
            href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
            rel="stylesheet"
    />
    <!-- MDB -->
    <link
            href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.css"
            rel="stylesheet"
    />

    <link
            href="{{ asset('css/baseStyle.css') }}"
            rel="stylesheet"
    />
    {% block css %}{% endblock %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
            crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
</head>

<body>

<!-- Navbar-->
<header>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <!-- Container wrapper -->
        <div class="container-fluid">
            <!-- Toggle button -->
            <button
                    class="navbar-toggler"
                    type="button"
                    data-mdb-toggle="collapse"
                    data-mdb-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
            >
                <i class="fas fa-bars"></i>
            </button>

            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Navbar brand -->
                <a class="navbar-brand me-2 mb-1 d-flex align-items-center" href="/">
                    <img
                            src="{{ asset('img/logo.png') }}"
                            height="45"
                            alt=""
                            loading="lazy"
                            style="margin-top: 2px;"
                    />
                </a>
                <!-- Left links -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/productos/categoria/todos">Todos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/productos/categoria/mujer">Mujer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/productos/categoria/hombre">Hombres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/productos/categoria/niños">Niños</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/productos/categoria/accesorios">Accesorios</a>
                    </li>
                </ul>
                <form method="get" action="{{ path('productos.listado', {tipo: 'todos' }) }}"
                      class="d-flex input-group w-auto mr-2">
                    <input autocomplete="off"
                           type="search"
                           class="form-control rounded"
                           placeholder="Búsqueda"
                           aria-label="Search"
                           name="search"
                           value="{{ search|default('') }}"
                    />
                    <button
                            class="btn btn-outline-primary"
                            type="submit"
                            data-mdb-ripple-color="dark"
                    >
                        Search
                    </button>
                </form>
                <!-- Left links -->
            </div>
            <!-- Collapsible wrapper -->

            <!-- Right elements -->
            <div class="d-flex align-items-center">

                <!-- Icon -->
                <a class="text-reset me-3" href="/carrito/compra">
                    <span class="badge badge-pill bg-danger" hidden="true">1</span>
                    <span><i class="fas fa-shopping-cart"></i></span>
                </a>

                <!-- Avatar -->
                <a
                        class="dropdown-toggle d-flex align-items-center hidden-arrow"
                        href="#"
                        id="navbarDropdownMenuLink"
                        role="button"
                        data-mdb-toggle="dropdown"
                        aria-expanded="false"
                >
                    <span><i class="fas fa-user"></i></span>
                </a>
                <ul
                        class="dropdown-menu dropdown-menu-end"
                        aria-labelledby="navbarDropdownMenuLink"
                >
                    {% if app.user %}
                        <li>
                            <a class="dropdown-item" href="/cliente">Mi perfil</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="{{ path('app_logoutCliente') }}">Logout</a>
                        </li>

                    {% else %}
                        <li>
                            <a class="dropdown-item" href="/cliente/login">Login o Registrar</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
            <!-- Right elements -->
        </div>
        <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->
</header>

{% block body %}{% endblock %}

{% block modales %}{% endblock %}

<footer class="bg-light text-center text-white">
    <!-- Grid container -->
    <div class="container p-4 pb-0">
        <!-- Section: Social media -->
        <section>
            <!-- Facebook -->
            <a
                    class="btn btn-primary btn-floating m-1"
                    style="background-color: #3b5998;"
                    href="https://www.facebook.com/"
                    role="button"
            ><i class="fab fa-facebook-f"></i
                ></a>

            <!-- Twitter -->
            <a
                    class="btn btn-primary btn-floating m-1"
                    style="background-color: #55acee;"
                    href="https://twitter.com/"
                    role="button"
            ><i class="fab fa-twitter"></i
                ></a>

            <!-- YouTube -->
            <a
                    class="btn btn-primary btn-floating m-1"
                    style="background-color: #dd4b39;"
                    href="https://www.youtube.com/"
                    role="button"
            ><i class="fab fa-youtube"></i
                ></a>

            <!-- Instagram -->
            <a
                    class="btn btn-primary btn-floating m-1"
                    style="background-color: #ac2bac;"
                    href="https://www.instagram.com/"
                    role="button"
            ><i class="fab fa-instagram"></i
                ></a>

            <!-- Linkedin -->
            <a
                    class="btn btn-primary btn-floating m-1"
                    style="background-color: #0082ca;"
                    href="https://www.tiktok.com/es"
                    role="button"
            ><i class="fab fa-tiktok"></i
                ></a>
            <!-- Github -->
            <a
                    class="btn btn-primary btn-floating m-1"
                    style="background-color: #81b71a;"
                    href="https://open.spotify.com/"
                    role="button"
            ><i class="fab fa-spotify"></i
                ></a>
        </section>
        <!-- Section: Social media -->
    </div>
    <!-- Grid container -->

    <!-- Copyright -->
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0);">
        <a class="text-black" href="https://mdbootstrap.com/">© {{ "now"|date("Y") }} Copyright: Yishop</a>
    </div>
    <!-- Copyright -->
</footer>

<script src="{{ asset('js/mdb.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('js/mdb.free.js') }}" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.js"></script>

<script src="{{ asset('js/addProducto.js') }}" type="text/javascript"></script>

{% block javascripts %}{% endblock %}

</body>
</html>